{
    //Makes life easier//
    "reload_style_on_change": true,


    //Makes the left and right border independent//
    "margin-top": 0,
    "margin-left": 0,
    "margin-right": 0,

    //Modifiable, probably//
    "modules-left": [
        "hyprland/workspaces"
    ],
    /* "modules-center": [], */
    "modules-right": [
        "power-profiles-daemon",
        "network",
        "battery",
        "pulseaudio",
        "backlight",
        "clock"
    ],
    "custom/power": {
        "format": "‚≠ò ",
        "tooltip": false,
        "on-click": "wlogout -b 5",
    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{icon}",
        "format-icons": {
            "1": "H",
            "2": "I",
            "3": "G",
            "4": "H",
            "5": "L",
            "6": "A",
            "7": "N",
            "8": "D",
            "9": "E",
            "10": "R"
        },
        "cursor": true
    
    },
    "tray": {
        "icon-size": 20,
        "spacing": 10,
        "cursor": true,
    },
    "network": {
        "format-wifi": "Ôá´ {essid}",
        "format-ethernet": "Óºâ  Ethernet",
        "format-linked": "ÔÅû  Linked (No IP)",
        "format-disconnected": "ÔÅ±  WiFi-less",
        "tooltip": false,
        "on-click": "kitty -e iwctl"
    },
    "battery": {
        "states": {
            "good": 85,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-full": "{icon} {capacity}%",
        "format-plugged": "ÔÉß {capacity}%",
        "format-charging": "ÔÉß {capacity}%",
        "format-alt": "{icon} {capacity}%",
        "cursor": false,
        "format-icons": [
            "ÔâÑ ",
            "ÔâÉ ",
            "ÔâÇ ",
            "ÔâÅ ",
            "ÔâÄ "
        ],
        "tooltip-format": "{time}",
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "Ôë¶  {volume}%",
        "format-bluetooth": "Ôäî {volume}%",
        "format-bluetooth-muted": "Ôë¶  {volume}%",
        "format-icons": {
            "headphone": "ÔÄ• ",
            "headset": "ÔÄ• ",
            "default": [
                "ÔÄ® "
            ],
        },
        "on-click": "pavucontrol",
    },
    "power-profiles-daemon": {
        "format": "{icon} {profile}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "performance": "‚ö°",
            "balanced": "‚öñÔ∏è",
            "power-saver": "üîã"
        }
    },
    "backlight": {
        "format": "ñ§ì {percent}%",
    },
    "clock": {
        "format": "{:%H:%M}",
        "tooltip-format": "<span size='15000'><tt>{calendar}</tt></span>",
        "calendar": {
            "mode": "month",
            "format": {
                "months": "<span color='#F5C2E7'><b>{}</b></span>",
                "weekdays": "<span color='#89B4FA'><b>{}</b></span>",
                "days": "<span color='#CDD6F4'><b>{}</b></span>",
                "today": "<span color='#F9E2AF'><b>{}</b></span>",
            }
        },
        "on-click": "swaync-client -t -sw",
    }
}